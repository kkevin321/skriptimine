#!/bin/bash

echo -n "Sisesta esimese kaateti v채채rtus: "
read esimene_kaatet
echo -n "Siessta teise kaateti v채채rtus: "
read teine_kaatet
#
hypotenuus=`expr $esimene_kaatet \* $esimene_kaatet + $teine_kaatet \* $teine_kaatet`
echo '
  +
  |\
  | \ C
A |  \
  |   \
  +----
    B    '
echo sqrt "($hypotenuus)" | bc
#
